@model List<TradeSolutionsApp.INFRA.Entities.TiendasEntitie>
@{
    ViewData["Title"] = "Home Page";
}

<form>
    <div class="col-5">
        <div class="form-group">
            <label for="NombreTienda">Nombre de la Tienda</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" aria-describedby="Nombre Tienda" placeholder="Ingrese el Nombre de a Tienda" required>
        </div>
        <div class="form-group">
            <label for="FechaCreacion">Fecha de Apertura</label>
            <input type="date" class="form-control" id="FechaCreacion" name="FechaCreacion" required>
        </div>
        <button type="submit" class="btn btn-primary" id="BtnRegistrar">Registrar</button>
    </div>
</form>

<form>
    <div class="container" style="margin-top: 30px;">
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered" id="tableInfo">
                    <thead>
                        <tr>
                            <th scope="col">Tienda</th>
                            <th scope="col">Nombre de la Tienda</th>
                            <th scope="col">Agregar Productos</th>
                        </tr>
                    </thead>
                    <tbody>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr class="tabla__vacia">
                                <td colspan="9">
                                    No se encontraron registros
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Nombre</td>
                                    <td class="accion">
                                        <a href="~/home/Privacy/@item.Id" class="btn btn-info">Agregar Productos</a>
                                        <a href="~/home/EliminarRegistro/@item.Id" class="btn btn-success">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>

<script>

</script>